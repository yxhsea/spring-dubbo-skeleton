<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
		"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >

<generatorConfiguration>
	<context id="contexst">
		<property name="javaFileEncoding" value="utf-8"/>

		<!-- pagination plugin -->
		<plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

		<commentGenerator>
			<!-- 不生成注解信息 -->
			<property name="suppressAllComments" value="true"/>
		</commentGenerator>

		<!-- 数据库配置 -->
		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
						connectionURL="jdbc:mysql://127.0.0.1:3308/user-service"
						userId="root"
						password="123456"/>

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false"/>
		</javaTypeResolver>

		<!-- 生成模型的包名和位置-->
		<javaModelGenerator targetPackage="com.skeleton.user.service.provider.domain"
							targetProject="src/main/java">
			<property name="enableSubPackages" value="true"/>
			<property name="trimStrings" value="true"/>
		</javaModelGenerator>

		<!-- 生成映射文件的包名和位置-->
		<sqlMapGenerator targetPackage="mapper"
						 targetProject="src/main/resources">
			<property name="enableSubPackages" value="true"/>
		</sqlMapGenerator>

		<!-- 生成DAO的包名和位置-->
		<javaClientGenerator targetPackage="com.skeleton.user.service.provider.mapper"
							 targetProject="src/main/java"
							 type="XMLMAPPER"/>

		<table tableName="user" domainObjectName="UserDomain" enableCountByExample="true"
			   enableUpdateByExample="true"
			   enableDeleteByExample="true" enableSelectByExample="true"
			   selectByExampleQueryId="true">
		</table>

	</context>

</generatorConfiguration>
